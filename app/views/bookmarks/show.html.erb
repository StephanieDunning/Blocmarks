<h2><%= @bookmark.url %></h2>

<div class="col-md-4">
  <div style="text-align:center">
    <%= render partial: 'likes/like', locals: { bookmark: @bookmark } %>
      <% if policy(@bookmark).update? %>
        <%= link_to "Edit", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-success' %>
      <% end %>
      <% if policy(@bookmark).destroy? %>
        <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger', data: { confirm: 'Do you want to delete this bookmark?'} %>
      <% end %>
  </div>
</div>
