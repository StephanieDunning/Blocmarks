<h3><%= link_to @bookmark.url %></h3>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% if policy(@bookmark).update? %>
        <%= link_to "Edit", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-success btn-xs' %>
      <% end %>
      <% if policy(@bookmark).destroy? %>
        <%= link_to "Delete", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger btn-xs', data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
      <% end %>
    </div>
  </div>
</div>
