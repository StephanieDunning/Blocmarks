<h2 class="text-center"><%= @topic.title %></h2>
<div class="col-md-6">
  <% @topic.bookmarks.each do |bookmark, url| %>
    <h4><%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %></h4>
  <% end %>
</div>
<div>
  <% if policy(@topic).update? %>
    <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-success' %>
  <% end %>
  <% if policy(@topic).destroy? %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
  <% end %>
  <%= link_to "New Bookmark", new_topic_bookmark_path(@topic, @bookmark), class: 'btn btn-success'%>
</div>
